{
  "dataset_reader": {
    "type": "squad2",
    "token_indexers": {
      "tokens": {
        "type": "single_id",
        "lowercase_tokens": true
      },
      "token_characters": {
        "type": "characters",
        "character_tokenizer": {
          "byte_encoding": "utf-8"
        },
        "min_padding_length": 5
      }
    }
  },
  "data_loader": {
    "batch_sampler": {
    "type": "bucket",
    "padding_noise": 0.0,
    "batch_size": 40
    }
  },
  "model": {
    "type": "bidaf",
    "text_field_embedder": {
      "token_embedders": {
        "tokens": {
          "type": "embedding",
          "trainable": false,
          "embedding_dim": 300,
          "pretrained_file": "data/glove/glove.6B.300d.txt"
        },
        "token_characters": {
          "type": "character_encoding",
          "embedding": {
            "num_embeddings": 260,
            "embedding_dim": 8
          },
          "encoder": {
            "type": "cnn",
            "embedding_dim": 8,
            "num_filters": 8,
            "ngram_filter_sizes": [
              5
            ]
          }
        }
      }
    },
    "num_highway_layers": 1,
    "phrase_layer": {
      "type": "lstm",
      "input_size": 308,
      "hidden_size": 10,
      "num_layers": 1
    },
    "matrix_attention": {
      "type": "linear",
      "combination": "x,y,x*y",
      "tensor_1_dim": 308,
      "tensor_2_dim": 308
    },
    "modeling_layer": {
      "type": "lstm",
      "input_size": 40,
      "hidden_size": 10,
      "num_layers": 1
    },
    "span_end_encoder": {
      "type": "lstm",
      "input_size": 70,
      "hidden_size": 308,
      "num_layers": 1
    }
  },
  "trainer": {
    "num_epochs": 1,
    "grad_norm": 10.0,
    "patience" : 12,
    "cuda_device" : -1,
    "optimizer": {
      "type": "adadelta",
      "lr": 0.5,
      "rho": 0.95
    }
  },
  "train_data_path": "data/squad/train-v2.0-test.json",
  "validation_data_path": "data/squad/dev-v2.0-test.json"
}
